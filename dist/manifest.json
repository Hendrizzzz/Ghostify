{
    "manifest_version": 3,
    "name": "Ghostify",
    "version": "1.0.0",
    "description": "Control your visibility on Instagram & Messenger. Hide typing indicators, read receipts, and story views.",
    "author": "Hendrizzzz",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.instagram.com/*",
        "*://*.messenger.com/*",
        "*://*.facebook.com/*",
        "https://raw.githubusercontent.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Ghostify - Privacy Controls"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*",
                "*://*.messenger.com/*",
                "*://*.facebook.com/*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_start",
            "world": "ISOLATED"
        },
        {
            "matches": [
                "*://*.instagram.com/*",
                "*://*.messenger.com/*",
                "*://*.facebook.com/*"
            ],
            "js": [
                "js/ghost.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "config/patterns.json"
            ],
            "matches": [
                "*://*.instagram.com/*",
                "*://*.messenger.com/*",
                "*://*.facebook.com/*"
            ]
        }
    ]
}